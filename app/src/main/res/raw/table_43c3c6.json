            "table_entries": [
                {
                    "dice_val": "1",
                    "entry": "Faint. Barely audible, ominous whispers are heard revealing the prophecy"
                },
                {
                    "dice_val": "2",
                    "entry": "Scarring. Thin, painful cuts begin appearing all over the body of the seer, revealing the message"
                },
                {
                    "dice_val": "3",
                    "entry": "Herald. A messenger seen only by the seer begins telling the prophecy"
                },
                {
                    "dice_val": "4",
                    "entry": "Vision. The next few nights the vision comes to the seer in dreams"
                },
                {
                    "dice_val": "5",
                    "entry": "Chanting. Messengers seen by all materialize and begin chanting the prophecy in unison"
                },
                {
                    "dice_val": "6",
                    "entry": "Scribed. The seer loses control of their hands. The hands begin frantically writing the "
                },
                {
                    "dice_val": "7",
                    "entry": "Unconcious. The seer collapses and begins to experience the prophecy in a dream"
                },
                {
                    "dice_val": "8",
                    "entry": "Controlled. The seer very calmly begins speaking the prophecy"
                },
                {
                    "dice_val": "9",
                    "entry": "Possessed. The seer\u2019s eyes roll back and they mechanically start reciting"
                },
                {
                    "dice_val": "10",
                    "entry": "Violent. The seer begins convulsing and screaming the prophecy in agony"
                }
            ]
