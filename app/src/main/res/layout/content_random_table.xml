<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_random_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0sp"
    android:paddingLeft="0sp"
    android:paddingRight="0sp"
    android:paddingTop="0sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.prkmd.behindthetables.activity.RandomTableActivity"
    tools:showIn="@layout/activity_random_table"
    android:orientation="vertical"
    android:background="@color/colorTableOdd">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/random_table_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:groupIndicator="@null"
        android:headerDividersEnabled="true"
        android:paddingBottom="85dp"
        android:clipToPadding="false"
        />

</LinearLayout>
