<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_random_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTableOdd"
        android:orientation="vertical"
        android:paddingBottom="0sp"
        android:paddingLeft="0sp"
        android:paddingRight="0sp"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_collapseMode="pin"
        tools:context="de.rub.pherbers.behindthetables.RandomTableActivity"
        tools:showIn="@layout/activity_random_table">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/random_table_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="true"
            android:groupIndicator="@null"
            android:headerDividersEnabled="true" />

    </LinearLayout>