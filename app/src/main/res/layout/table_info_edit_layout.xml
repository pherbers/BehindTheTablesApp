<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTableOdd"
    android:orientation="vertical"
    android:paddingStart="@dimen/text_margin"
    android:paddingTop="@dimen/text_vertical_margin"
    android:paddingEnd="@dimen/text_margin"
    android:paddingBottom="@dimen/text_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/category_text"
            style="@style/AppTheme.TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>

        <ImageButton
            android:id="@+id/category_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="@string/action_edit"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            app:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/baseline_edit_black_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/description_text"
            style="@style/AppTheme.TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColorLink="@color/colorLink" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>

        <ImageButton
            android:id="@+id/description_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="@string/action_edit"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            app:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/baseline_edit_black_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/keywords_text"
            style="@style/AppTheme.TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColorLink="@color/colorLink" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>

        <ImageButton
            android:id="@+id/keywords_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="@string/action_edit"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            app:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/baseline_edit_black_24" />
    </LinearLayout>


</LinearLayout>